<div ng-controller="growl"></div>
<% [:alert, :success, :error].each do |type| %>
    <div flash-alert="<%= type %>"  active-class="in alert alert-<%= type %>" class="fade dn">
        <button type="button" class="close"ng-click="hide()">&times;</button>
        {{flash.message}}
    </div>
<% end %>
