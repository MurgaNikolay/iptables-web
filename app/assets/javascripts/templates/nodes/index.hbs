<h2>Nodes</h2>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Hostname</th>
        <th>Ips</th>
        <th>Description</th>
        <th style="width:100px">
            <a {{action "add"}} href="#" title="Register new node" class="glyphicon glyphicon-plus"></a>
        </th>
    </tr>
    {{#each node in controller}}
        {{#link-to "nodes.node" node tagName="tr" class="clickable"}}
            <td>{{node.id}}</td>
            <td>{{node.hostname}}</td>
            <td>{{node.ips}}</td>
            <td>{{node.description}}</td>
            <td>
                <a {{action "delete" node}} href="#" title="Delete node" class="glyphicon glyphicon-remove"></a>
            </td>
        {{/link-to}}
    {{else}}
        <li class="no-nodes-yet">no nodesâ€¦ :(</li>
    {{/each}}
</table>

{{! see the link-to helper a few lines above? this outlet will host views reached by clicking on it (the link-to tag) }}
<div class="node-pane">
    {{outlet}}
</div>
